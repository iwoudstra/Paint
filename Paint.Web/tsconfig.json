{
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es6",
        "outFile": "bundles/all.js"
    },
    "include": [
        "model/game.ts",
        "model/**/*"
    ],
    "exclude": [
        "node_modules",
        "wwwroot",
        "bundles"
    ]
}